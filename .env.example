# Environment
ENVIRONMENT=development
DEBUG=True

# Database - CHANGE IN PRODUCTION!
DATABASE_URL=postgresql://user:password@db:5432/aiclouddrive
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# MinIO - CHANGE THESE IN PRODUCTION!
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=False

# ChromaDB
CHROMA_HOST=chromadb
CHROMA_PORT=8000

# Redis
REDIS_URL=redis://redis:6379/0
CACHE_TTL=300

# LLM Provider (Groq)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_TIMEOUT=60

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_EXTENSIONS=.pdf,.txt,.md

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost

# Logging
LOG_LEVEL=INFO

# Email (SMTP) - Required for email verification
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com
